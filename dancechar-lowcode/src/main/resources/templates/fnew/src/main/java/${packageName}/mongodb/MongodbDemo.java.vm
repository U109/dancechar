package ${packageName}.mongodb;


import ${packageName}.mongodb.MongodbDemoDTO;
import com.sf.cemp.framework.common.base.SFResultUtil;
import com.sf.cemp.framework.common.util.bean.SfBeanUtil;
import com.sf.cemp.framework.mongodb.service.MongoDbService;
import com.sf.framework.domain.Result;
import org.springframework.stereotype.Component;

import javax.annotation.Resource;

/**
 * 类描述：Redis使用Demo
 *
 * @author ${authorName}
 * @date ${createDateString}
 */
@Component
public class MongodbDemo {

    @Resource
    private MongoDbService mongoDbService;

    
    public Result<Boolean> save(MongodbDemoDTO demo) {
        mongoDbService.save(demo);
        return SFResultUtil.success(true);
    }

    
    public Result<MongodbDemoDTO> queryById(MongodbDemoDTO demo) {
        return SFResultUtil.success(mongoDbService.queryById(demo.getId(), MongodbDemoDTO.class));
    }

    
    public Result<Boolean> deleteById(MongodbDemoDTO demo) {
        mongoDbService.deleteById(demo.getId(), MongodbDemoDTO.class);
        return SFResultUtil.success(true);
    }

    
    public Result<Boolean> updateFirst(MongodbDemoDTO demo) {
        MongodbDemoDTO queryMongoDTO = new MongodbDemoDTO();
        queryMongoDTO.setId(demo.getId());
        MongodbDemoDTO updateMongoDTO = new MongodbDemoDTO();
        SfBeanUtil.copyNotNull(demo, updateMongoDTO);
        mongoDbService.updateFirst(queryMongoDTO, updateMongoDTO, MongodbDemoDTO.class);
        return SFResultUtil.success(true);
    }
}