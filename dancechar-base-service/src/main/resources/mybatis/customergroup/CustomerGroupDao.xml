<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.litian.dancechar.base.biz.customergroup.dao.inf.CustomerGroupDao">

    <select id="findList" resultType="com.litian.dancechar.base.biz.customergroup.dto.CustomerGroupRespDTO">
        SELECT
            *
        FROM
            customer_group_info
        WHERE
          delete_flag = 0
          <if test="code != null and code != ''">
                and code = #{code}
          </if>
          <if test="name != null and name != ''">
              and name = #{name}
          </if>
    </select>
</mapper>
