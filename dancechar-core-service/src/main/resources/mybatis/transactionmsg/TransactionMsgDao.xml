<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.litian.dancechar.core.biz.transactionmsg.dao.inf.SysTransactionMsgDao">

    <select id="findList" parameterType="com.litian.dancechar.core.biz.transactionmsg.dto.SysTransactionMsgReqDTO"
            resultType="com.litian.dancechar.core.biz.transactionmsg.dto.SysTransactionMsgRespDTO">
        SELECT
        c.*
        FROM
        sys_transaction_msg c
        WHERE
        c.delete_flag = 0 and c.msg_status in (1,3) and retry_times &lt;max_retry_times
        <if test="businessType != null and businessType != ''">
            and c.business_type = #{businessType}
        </if>
    </select>
</mapper>
